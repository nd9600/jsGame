{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["es2017", "dom"],
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["shell/vue/components/*"],
            "@/*": ["*"],
        },
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]        
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.vue",
        "./__tests__/**/*"
    ],
    "exclude": [
      "node_modules", "static/js"
    ]
}