{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["es2017"],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]        
    },
    "include": [
        "./src/**/*",
        "./__tests__/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}